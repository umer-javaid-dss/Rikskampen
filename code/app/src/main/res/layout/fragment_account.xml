        <RelativeLayout

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:background="@drawable/item_background_white"
                android:elevation="3dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="120dp"

                        android:layout_height="120dp"
                        android:elevation="3dp"
                        app:cpb_background_progressbar_color="#F0F0F0"
                        app:cpb_background_progressbar_width="10dp"
                        app:cpb_progress="40"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="#94DE97"
                        app:cpb_progressbar_width="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2774"
                            android:textColor="@android:color/black"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="/6000 steps"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14dp" />

                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="205dp"

                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart1"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/chart1"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/darker_gray">

                    </View>


                    <TextView
                        android:id="@+id/startTime"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/view"
                        android:text="12:00 am"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view"
                        android:layout_alignParentRight="true"
                        android:text="12:00 am"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10dp" />


                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/topLayout"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/item_background_white"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/clockIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/ic_clock" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Active Time"
                    android:textSize="14dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/clockIcon" />



                <TextView
                    android:id="@+id/todayTime"
                    android:layout_width="wrap_content"
                    android:text="19"
                    android:layout_alignParentBottom="true"
                    android:textSize="24dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                     />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"


                    android:layout_toEndOf="@+id/todayTime"
                    android:layout_marginBottom="18dp"
                    android:text="/60 mins"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14dp" />




            </RelativeLayout>


        </RelativeLayout>


