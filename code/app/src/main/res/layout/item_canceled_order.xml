<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/item_background_white"
    android:layout_height="100dp">


    <ImageView
        android:id="@+id/productImage"
        android:layout_marginLeft="5dp"
        android:layout_width="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_product_1"
        android:layout_height="80dp">

    </ImageView>



    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/productName"
        android:textSize="16dp"
        android:layout_toRightOf="@id/productImage"
        android:text="Bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/productName"
        android:layout_marginLeft="25dp"
        android:textSize="14dp"
        android:layout_toRightOf="@id/productImage"
        android:id="@+id/shortSummary"
        android:text="Used forn weight lifting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/shortSummary"
        android:layout_marginLeft="25dp"
        android:textSize="14dp"
        android:layout_toRightOf="@id/productImage"
        android:id="@+id/orderStatus"
        android:text="18-06-2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:id="@+id/productPrice"
        android:textStyle="bold"
        android:textSize="16dp"

        android:text="48$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />






</RelativeLayout>