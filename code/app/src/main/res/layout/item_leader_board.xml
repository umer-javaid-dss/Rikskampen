<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"


    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <LinearLayout
            android:id="@+id/steps_icon_container"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/shoe_background"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/steps_icon"

            android:layout_centerVertical="true"

            android:layout_width="36dp"
            android:layout_height="36dp"

            android:src="@mipmap/ic_feeet"
            app:civ_border_color="@color/colortabselected"
            app:civ_border_width="2dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/steps_icon_container"
            android:layout_marginLeft="-27dp"
            android:orientation="horizontal"
            android:id="@+id/leftContainer1"
            android:layout_width="270dp"
            android:gravity="end|center_vertical"
            android:layout_centerVertical="true"
            android:background="@color/colortabselected"
            android:layout_height="38dp">

            <TextView
                android:id="@+id/progress"
                android:layout_marginRight="25dp"
                android:text="Katie - 365,765"
                android:textSize="13dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage1"
            android:layout_marginLeft="-15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/leftContainer1"
            android:layout_width="42dp"
            android:layout_height="42dp"

            android:src="@drawable/profile5"
            app:civ_border_color="@color/colortabselected"
            app:civ_border_width="2dp"
            />

        <TextView
            android:layout_toRightOf="@id/profileImage1"
            android:id="@+id/position1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:elevation="2dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colortabselected"
            android:text="#1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>



</android.support.constraint.ConstraintLayout>