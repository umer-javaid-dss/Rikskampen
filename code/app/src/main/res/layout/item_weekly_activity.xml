<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_margin="5dp"
    android:elevation="2dp"
    android:background="@drawable/item_background_white"
    android:layout_height="80dp">


    <ImageView
        android:id="@+id/weeklyPick"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:src="@drawable/profile2"
        android:layout_height="60dp" />


    <TextView
        android:layout_toRightOf="@id/weeklyPick"
        android:layout_marginLeft="15dp"
        android:id="@+id/stepsTV"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:text="Steps:"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_alignBaseline="@id/stepsTV"
        android:layout_toRightOf="@id/stepsTV"
        android:layout_marginLeft="15dp"
        android:id="@+id/stepsValue"
        android:textSize="15dp"
        android:textColor="@color/dark_gray"
        android:layout_width="wrap_content"
        android:text="2774"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_toRightOf="@id/weeklyPick"
        android:layout_below="@id/stepsTV"
        android:layout_marginLeft="15dp"
        android:id="@+id/calTV"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:text="Calories:"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_alignBaseline="@id/calTV"
        android:layout_toRightOf="@id/calTV"
        android:layout_marginLeft="15dp"
        android:id="@+id/calValue"
        android:textSize="15dp"
        android:textColor="@color/dark_gray"
        android:layout_width="wrap_content"
        android:text="34556"
        android:layout_height="wrap_content" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/topLayout"


       >

        <ImageView
            android:id="@+id/clockIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_clock" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Active Time"
            android:textSize="14dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/clockIcon" />



        <TextView
            android:id="@+id/todayTime"
            android:layout_width="wrap_content"
            android:text="19"
            android:layout_alignParentBottom="true"
            android:textSize="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"


            android:layout_toEndOf="@+id/todayTime"
            android:layout_marginBottom="18dp"
            android:text="/60 mins"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp" />




    </RelativeLayout>




</RelativeLayout>