<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <VideoView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:id="@+id/exerciseVideo" />


            <com.wang.avi.AVLoadingIndicatorView
                android:layout_centerInParent="true"
                android:layout_marginTop="18dp"
                android:id="@+id/triangleProgressView"
                android:scaleX="1.4"
                android:scaleY="1.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallTrianglePathIndicator"
                />


                 <ImageView
                     android:id="@+id/replayVideo"
                     android:visibility="gone"
                     android:layout_width="40dp"
                     android:layout_marginTop="20dp"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/ic_replay"
                     android:layout_height="40dp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"


                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/ic_fullscreen"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Max"
                    android:textSize="16dp"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />

            </LinearLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_marginLeft="60dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/ic_clock"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/timeTV"
                        android:layout_width="wrap_content"
                        android:text="4:23"
                        android:textSize="16dp"
                        android:textColor="@color/dark_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:onClick="onVolumeClick"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/ic_speaker"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Voice"
                    android:textSize="16dp"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/item_background_white"
            android:elevation="3dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_height="match_parent">






            <TextView
                android:layout_width="wrap_content"
                android:text="Bodypart:"
                android:textSize="20dp"

                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Shoulder"
                android:textSize="16dp"

                android:textColor="@color/dark_gray"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Workut:"
                android:textSize="20dp"

                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Two Bar Shoulder press"
                android:textSize="16dp"

                android:textColor="@color/dark_gray"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:text="Description:"
                android:textSize="20dp"

                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/text_des"
                android:textSize="16dp"

                android:textColor="@color/dark_gray"
                android:layout_height="wrap_content" />



        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"

        >


        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:rotation="180"
            android:src="@drawable/ic_next" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onBackClick"
            android:text="Back"
            android:textSize="18dp" />

    </LinearLayout>


</RelativeLayout>
