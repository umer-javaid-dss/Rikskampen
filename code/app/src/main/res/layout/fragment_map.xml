<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">



<FrameLayout

    android:id="@+id/mapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context=".leader.activity.fragments.home.HomeFragment">

</FrameLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#50000000"

        android:layout_marginBottom="60dp"
        android:gravity="center"

        android:layout_height="80dp">



        <TextView
            android:id="@+id/chasingButton"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:text=" Start Chasing "
            android:textSize="16dp"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:background="@drawable/item_background"
            android:layout_height="30dp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/starContainer"
            android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="60dp"
                android:id="@+id/starItem1"

               android:layout_height="60dp">

            <ImageView
                android:layout_centerInParent="true"
            android:layout_width="40dp"

            android:id="@+id/star1Button"
            android:src="@drawable/ic_star_1"
            android:layout_height="40dp" />


               <TextView
                   android:layout_centerInParent="true"
                   android:layout_width="20dp"
                   android:text="1"
                   android:background="@drawable/item_background_white"
                   android:textSize="14dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textColor="@android:color/black"
                   android:layout_height="20dp" />

           </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:id="@+id/starItem2"
                android:layout_height="60dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"

                    android:src="@drawable/ic_star_2"
                    android:layout_height="40dp" />


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:text="2"
                    android:background="@drawable/item_background_white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="20dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="60dp"
                android:id="@+id/starItem3"
                android:layout_height="60dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"

                    android:src="@drawable/start_3"
                    android:layout_height="40dp" />


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:text="3"
                    android:background="@drawable/item_background_white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="20dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="60dp"
                android:id="@+id/starItem4"
                android:layout_height="60dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"

                    android:src="@drawable/star_4"
                    android:layout_height="40dp" />


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:text="4"
                    android:background="@drawable/item_background_white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="20dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="60dp"
                android:id="@+id/starItem5"
                android:layout_height="60dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"

                    android:src="@drawable/start_5"
                    android:layout_height="40dp" />


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:text="5"
                    android:background="@drawable/item_background_white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="20dp" />

            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>