<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kampen.riks.app.rikskampen.leader.activity.fragments.me.MyWork">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/item_background_white"
        android:elevation="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/topLayout"
        android:layout_height="220dp">


        <RelativeLayout
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="120dp"

            android:elevation="3dp"
            android:layout_height="120dp"
            app:cpb_background_progressbar_color="#F0F0F0"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progress="40"
             app:cpb_progress_max="100"
            app:cpb_progressbar_color="#94DE97"
            app:cpb_progressbar_width="10dp" />

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="2774"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="/6000 steps"

                    android:textSize="14dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_height="wrap_content" />

            </LinearLayout>






        </RelativeLayout>


        <RelativeLayout
            android:layout_centerHorizontal="true"

            android:layout_width="205dp"
            android:layout_height="wrap_content">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart1"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="30dp"
            />

            <View
                android:id="@+id/view"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/chart1"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp">

            </View>


            <TextView
                android:layout_below="@id/view"
                android:id="@+id/startTime"

                android:layout_width="wrap_content"
                android:text="12:00 am"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/view"
                android:id="@+id/endTime"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="12:00 am"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:elevation="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/topLayout"
        android:background="@drawable/item_background_white"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/clockIcon"
            android:layout_width="18dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_clock"
            android:layout_height="18dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/clockIcon"
            android:layout_height="wrap_content" />


    </RelativeLayout>



</RelativeLayout>
